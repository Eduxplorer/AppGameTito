<Window x:Class="AppGameTito.AlteraSenhaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppGameTito"
        mc:Ignorable="d"
        Title="AlteraSenhaWindow" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid Margin="20">

            <StackPanel HorizontalAlignment="Left" Margin="0,0,0,20">
                <TextBlock  Text="Digite sua nova senha:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtNovaSenha"  Height="30" Margin="0,0,0,20"/>

                <TextBlock Text="Confirme sua nova senha:" Margin="0,0,0,10"/>
                <PasswordBox x:Name="txtConfirmarSenha"  Height="30" Margin="0,0,0,20" PasswordChar="*"/>
            <Button Content="Alterar Senha" Height="35" Click="btnAlterarSenha" Margin="0,10,0,0"/>
            <TextBlock Grid.Row="2" Margin="0,10,0,0" TextWrapping="Wrap">
                <Run Text="A senha deve ter pelo menos 8 caracteres, incluindo letras e números."/>
            </TextBlock>
            <TextBlock Grid.Row="3" Margin="0,20,0,0">
                <Hyperlink Click="aVoltarLogin">Voltar para o login</Hyperlink>
            </TextBlock>

                </StackPanel>
        </Grid>

    </Grid>
</Window>
