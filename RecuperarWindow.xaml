<Window x:Class="AppGameTito.RecuperarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppGameTito"
        mc:Ignorable="d"
        Title="RecuperarWindow" Height="297" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <Grid>

            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Grid.Row="0" Text="Digite o código enviado para o seu email:" Margin="0,0,0,10"/>
        <TextBox x:Name="txtEmail" Grid.Row="1" Height="30" Margin="0,0,0,20"/>
        <Button Content="Enviar Email de Recuperação" Grid.Row="2" Height="35" Click="btnCodigo" Margin="0,10,0,0"/>
            <TextBlock Grid.Row="3" Margin="0,20,0,0">
            <Hyperlink Click="aVoltarLogin">Voltar para o login</Hyperlink>
        </TextBlock>

                </StackPanel>
        </Grid>
    </Grid>
</Window>
